mutation sendMessage($id: String!, $newMessage: CreateMessageInput!) {
        sendMessage(id: $id, newMessage: $newMessage) {
            message {
                id
                text
                author
                createdAt
            }
        }
    }


variables: 
    {
    "id": "1",
    "newMessage": {
      	"id": 4,
        "author": "user",
        "text": "quel est ton sport préféré"
    }
}